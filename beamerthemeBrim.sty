\setbeamercolor{headline}{fg=sybred,bg=white}
\setbeamercolor{footline}{fg=sybred, bg=white}
\setbeamerfont{footline}{size=\large,series=\sf}
\setbeamercolor{separation line}{bg=ta3gray}
\setbeamercolor{title in headline}{fg=tabutter}
\setbeamercolor{author in headline}{fg=ta2butter}
