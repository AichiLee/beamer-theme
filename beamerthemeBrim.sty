\setbeamercolor*{block title}{fg=white,bg=tabutter}
\setbeamerfont{block title}{size=\large,series=\sc}
\setbeamercolor{upper separation line head}{fg=white}

\setbeamercolor*{example body}{fg=ta3aluminium,bg=black}
\setbeamercolor*{example text}{fg=ta3aluminium,bg=black}
